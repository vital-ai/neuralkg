edge3(X, Y, W) :-
    edge_id(E),
    edge_source(E, X),
    edge_target(E, Y),
    edge_weight(E, W).

employee3(Name, Age, Salary) :-
    emp_id(Emp),
    emp_name(Emp, Name),
    emp_age(Emp, Age),
    emp_salary(Emp, Salary).

light_edge(X, Y) :-
    edge_id(E),
    edge_source(E, X),
    edge_target(E, Y),
    edge_weight(E, W),
    W < 200.

light_edge3(X, Y, W) :-
    edge3(X, Y, W),
    W < 200.

path(X, Y) :-
    light_edge(X, Y).

path(X, Z) :-
    light_edge(X, Y),
    path(Y, Z).

eligible(Name) :-
    emp_id(Emp),
    emp_name(Emp, Name),
    emp_age(Emp, Age),
    Age > 40,
    emp_salary(Emp, Salary),
    Salary >= 80000.

eligible3(Name, Age, Salary) :-
    employee3(Name, Age, Salary),
    Age > 40,
    Salary >= 80000.
